{
  "name": "gravity-pdf",
  "private": true,
  "dependencies": {
    "classnames": "^2.2.6",
    "lodash.debounce": "^4.0.8",
    "prop-types": "^15.7.2",
    "react": "^16.8.3",
    "react-dom": "^16.8.3",
    "react-dropzone": "^9.0.0",
    "react-redux": "^6.0.1",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "redux": "^4.0.1",
    "redux-saga": "^1.0.2",
    "redux-watch": "^1.1.1",
    "reselect": "^4.0.0",
    "superagent": "3.8.3"
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/plugin-proposal-class-properties": "^7.3.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.4",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/polyfill": "^7.2.5",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-react": "^7.0.0",
    "@wordpress/scripts": "^5.1.0",
    "babel-eslint": "10.0.1",
    "babel-loader": "8.0.5",
    "babel-plugin-istanbul": "^5.1.1",
    "backbone": "^1.4.0",
    "chai": "^4.2.0",
    "cross-env": "^5.2.0",
    "dotenv": "^8.0.0",
    "dotenv-expand": "5.1.0",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.10.0",
    "eslint": "^5.16.0",
    "eslint-plugin-react": "^7.12.4",
    "gulp": "^4.0.0",
    "gulp-clean-css": "^4.0.0",
    "gulp-rename": "^1.4.0",
    "gulp-sort": "^2.0.0",
    "gulp-watch": "^5.0.1",
    "gulp-wp-pot": "^2.3.4",
    "history": "^4.9.0",
    "jquery": "^3.4.1",
    "json-loader": "^0.5.7",
    "karma": "^4.0.1",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.2",
    "karma-firefox-launcher": "^1.1.0",
    "karma-ie-launcher": "^1.0.0",
    "karma-mocha": "^1.3.0",
    "karma-phantomjs-launcher": "^1.0.4",
    "karma-sinon": "^1.0.5",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "4.0.0-rc.6",
    "mocha": "^6.0.2",
    "react-test-renderer": "^16.8.3",
    "redux-devtools-extension": "^2.13.8",
    "redux-mock-store": "^1.5.3",
    "sinon": "^7.2.6",
    "standard": "^12.0.1",
    "superagent-mocker": "^0.5.2",
    "testcafe": "^1.6.0",
    "uglifyjs-webpack-plugin": "^2.1.2",
    "underscore": "^1.9.1",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.2.3",
    "webpack-dev-middleware": "^3.6.0",
    "webpack-merge": "^4.2.1"
  },
  "scripts": {
    "lint:js": "eslint src/**/*.js",
    "lint:php": "npm run env docker-run -- php composer lint:errors",
    "lint:php:format": "npm run env docker-run -- php composer format",

    "test:php": "wp-scripts env test-php",
    "test:php:multisite": "cross-env WP_MULTISITE=1 wp-scripts env test-php",

    "test:e2e": "cross-env NODE_ENV=test testcafe chrome tests/e2e -s takeOnFails=true,fullPage=true",
    "test:e2e:headless": "cross-env NODE_ENV=test testcafe chrome:headless tests/e2e -s takeOnFails=true,fullPage=true",
    "test:e2e:file": "cross-env NODE_ENV=test testcafe chrome -s takeOnFails=true,fullPage=true",
    "test:e2e:watch": "cross-env NODE_ENV=test testcafe chrome tests/e2e -L",
    "test:e2e:file:watch": "cross-env NODE_ENV=test testcafe chrome -L",

    "test:js": "cross-env NODE_ENV=test karma start",
    "test:js:coverage": "cross-env NODE_ENV=test ENABLE_CODE_COVERAGE=1 karma start",
    "test:js:watch": "cross-env NODE_ENV=test karma start --auto-watch --no-single-run --log-level error",
    "test:js:all": "cross-env NODE_ENV=test karma start --browsers Firefox,Chrome,IE",

    "prebuild": "yarn global add gulp-cli && yarn && yarn prebuild:core-fonts",
    "prebuild:core-fonts": "bash bin/json-payload.sh https://api.github.com/repos/GravityPDF/mpdf-core-fonts/contents/ core-fonts.json",

    "build:production": "gulp && cross-env NODE_ENV=production webpack --mode production",
    "build:dev": "gulp && cross-env NODE_ENV=development webpack --mode development",
    "build:watch:css": "gulp watch",
    "build:watch:js": "cross-env NODE_ENV=development webpack --progress --colors --watch --mode development",

    "check-licenses": "wp-scripts check-licenses --prod --gpl2",

    "env": "wp-scripts env",
    "env:install": "bash bin/install.sh",
    "env:install:gf": "bash bin/install-gravityforms.sh",
    "env:install:phpunit": "bash bin/install-phpunit.sh",
    "env:reset": "bash bin/reset.sh"
  },

  "wp-env": {
    "plugin-dir": "gravity-forms-pdf-extended",
    "plugin-name": "Gravity PDF",
    "docker-template": "./.docker/docker-compose.override.yml.template"
  }
}
